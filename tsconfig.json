{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "lib",
    "emitDeclarationOnly": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types",
    ]
  },
  "include": [
    "src/**/*",
  ],
}
